# Selenium Behave Framework - Environment Configuration
# Copy this file to .env and configure as needed

# Browser Configuration
SELENIUM_BROWSER=chrome              # chrome, firefox, edge
SELENIUM_HEADLESS=False             # Run in headless mode
IMPLICIT_WAIT=10                    # Implicit wait timeout (seconds)
EXPLICIT_WAIT=20                    # Explicit wait timeout (seconds)
PAGE_LOAD_TIMEOUT=30                # Page load timeout (seconds)

# Window Settings
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080
MAXIMIZE_WINDOW=True

# Execution Settings
SCREENSHOT_ON_FAILURE=True
SCREENSHOT_ON_SUCCESS=False
RETRY_COUNT=1
SLOW_MODE=False                     # Enable slow mode for debugging
SLOW_MODE_DELAY=0.5                 # Delay between actions (seconds)

# Logging
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=True
LOG_TO_CONSOLE=True

# Application URLs
BASE_URL=https://www.saucedemo.com
API_URL=

# Test Data
TEST_DATA_FILE=test_data.xlsx

# Remote Execution (Selenium Grid)
REMOTE_EXECUTION=False
SELENIUM_GRID_URL=http://localhost:4444/wd/hub

# WebDriver Paths (optional - uses webdriver-manager if not set)
CHROME_DRIVER_PATH=
FIREFOX_DRIVER_PATH=
EDGE_DRIVER_PATH=

# Test Credentials (for demo purposes)
TEST_USERNAME=standard_user
TEST_PASSWORD=secret_sauce
